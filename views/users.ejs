<!DOCTYPE html>
<html>

    <head>
        <title>Users List</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    </head>

    <body>
        <div class="container mt-5">
            <h1 class="mb-4">Users List</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td>
                                <%= user.email %>
                            </td>
                            <td>
                                <%= user.firstName %>
                            </td>
                            <td>
                                <%= user.lastName %>
                            </td>
                            <td>
                                <a href="/users/<%= user.id %>/edit" class="btn btn-primary">Edit</a>
                                <a href="/users/<%= user.id %>/delete" class="btn btn-danger">Remove</a>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </body>

</html>